#!/usr/bin/env -S /usr/sbin/nft -I /etc/firewall/nftables-library/ -f

include "filter.nft"

# Regular DNS
add rule inet filter  input iif eth0 meta l4proto {udp, tcp} th dport {53, 853} counter accept
add rule inet filter output meta l4proto {udp, tcp} th sport {53, 853} ct state established counter accept
